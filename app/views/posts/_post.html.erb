<div class="card horizontal">
  <div class="card-image">
		<a href="/posts/show/<%=post.id %>">
			<img src="<%= post.image.url %>">
		</a>
  </div> 
  <div class="card-stacked">
	  <a href="/posts/show/<%=post.id %>" style="color: black">
		  <div class="card-content">
			  <span class="card-title" style="font-weight:550;"><%= post.title.truncate(28, omission: '...')%></span>
			  <span><%= post.created_at %></span>
			  <p class="pre-line"><%= post.content.truncate(250, omission: '...') %></p>
		  </div>
	  </a>
	  <div class="card-action">
			  <%= post.likes.size %> 명이 좋아합니다
			  <% if user_signed_in? %>
				  <% if current_user.is_like?(post) %>
					<%= link_to "좋아요 취소", post_like_path(post), method: "post" %>
				  <% else %>
					<%= link_to "좋아요", post_like_path(post), method: "post" %>
				  <% end %>
				  <% if current_user.id == post.user_id %>
					<%= link_to "삭제", post_path(post), method: "delete", class: "right" %>
					<%= link_to "수정", edit_post_path(post), class: "right" %>
				  <% end %>
			  <% end %>
		</div>
  </div>
</div>